<policies>
    <inbound>
        <cors allow-credentials="true">
            <allowed-origins>
                <origin>https://maps-dev.milochau.com</origin>
                <origin>https://maps.milochau.com</origin>
                <origin>https://dev.milochau.com</origin>
                <origin>https://www.milochau.com</origin>
                <origin>https://milochau.com</origin>
            </allowed-origins>
            <allowed-methods preflight-result-max-age="300">
                <method>*</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>
    </inbound>
    <backend>
        <forward-request />
    </backend>
    <outbound>
        <set-header name="server" exists-action="delete" />
        <set-header name="x-powered-by" exists-action="delete" />
        <set-header name="Ocp-Apim-Subscription-Key" exists-action="delete" />
    </outbound>
    <on-error />
</policies>